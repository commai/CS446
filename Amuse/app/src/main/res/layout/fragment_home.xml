    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/card1_media" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Padding -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <!-- Location -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="Mount Everest"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <!-- Stars -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <!-- Price -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:paddingTop="8dp"
                        android:text="$$$"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Padding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"></LinearLayout>

                    <!-- Groups -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/groups_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="8dp"
                            android:text="2 groups"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Padding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"></LinearLayout>

                    <!-- Likes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/likes_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="8dp"
                            android:text="100 interested"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Short description -->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidat."
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="10sp"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"/>
            </LinearLayout>

            <!-- Help icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/gym_icon"
                    android:paddingLeft="25dp"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

