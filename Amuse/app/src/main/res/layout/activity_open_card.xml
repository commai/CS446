<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/OuterCardMedia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card1_media" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/OuterCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hiking"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textColor="?android:attr/textColorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <!-- Scroll Child -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <!-- Left Side -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Location -->
                                <TextView
                                    android:id="@+id/OuterCardLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="25dp"
                                    android:text="Laurel Trail (2.1 km)"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorPrimary" />

                                <!-- Stars -->
                                <TextView
                                    android:id="@+id/OuterCardStars"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="25dp"
                                    android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorPrimary" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/OuterCardPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:paddingLeft="25dp"
                                    android:paddingTop="10dp"
                                    android:text="$"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorPrimary" />
                            </LinearLayout>

                            <!-- Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Groups -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/groups_icon" />

                                    <TextView
                                        android:id="@+id/OuterCardGroups"
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:paddingLeft="5dp"
                                        android:paddingTop="8dp"
                                        android:text="2 groups"
                                        android:textColor="?android:attr/textColorPrimary"
                                        android:textSize="12sp"/>
                                </LinearLayout>


                                <!-- Likes -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/likes_icon" />

                                    <TextView
                                        android:id="@+id/OuterCardLikes"
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:paddingLeft="5dp"
                                        android:paddingTop="8dp"
                                        android:text="100 interested"
                                        android:textColor="?android:attr/textColorPrimary"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <!-- Short description -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:paddingLeft="25dp"
                                android:paddingTop="8dp"
                                android:paddingRight="20dp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="10sp" />

                            <!-- Top Reviews -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:paddingLeft="25dp"
                                android:paddingTop="8dp"
                                android:paddingRight="20dp"
                                android:text="Top Reviews"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="10sp" />

                            <!-- Reviews -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Individual Review -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="45dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="25dp"
                                        app:srcCompat="@drawable/user_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="Good activity!"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Padding -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:orientation="horizontal" />

                                <!-- Individual Review -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="45dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="25dp"
                                        app:srcCompat="@drawable/user_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="Good activity!"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Padding -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:orientation="horizontal" />

                                <!-- Individual Review -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="45dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="25dp"
                                        app:srcCompat="@drawable/user_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="Good activity!"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Padding -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:orientation="horizontal" />

                                <!-- Individual Review -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="45dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="25dp"
                                        app:srcCompat="@drawable/user_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="Good activity!"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Padding -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:orientation="horizontal" />

                                <!-- Individual Review -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="45dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="25dp"
                                        app:srcCompat="@drawable/user_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="&#9733;&#9733;&#9733;&#9734;&#9734;"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="10dp"
                                            android:text="Good activity!"
                                            android:textSize="12sp"
                                            android:textColor="?android:attr/textColorPrimary" />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- ScrollView enlarger -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:orientation="horizontal" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="company-email@email.com"
                        android:paddingLeft="25dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="www.event-website.com"
                        android:paddingLeft="25dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="+1 (999) 999-9999"
                        android:paddingLeft="25dp"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/facebook_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/twitter_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/instagram_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

