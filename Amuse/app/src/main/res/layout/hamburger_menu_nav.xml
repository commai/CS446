<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation Preferences"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/Participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/Title"
        android:layout_marginTop="15dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Group Adventure"
        android:id="@+id/group"
        android:layout_below="@+id/Participants"
        android:layout_marginLeft="25dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group"
        android:id="@+id/solo"
        android:checked="false"
        android:text="Solo Adventure"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/solo"
        android:layout_marginTop="25dp"
        />

    <CheckBox
        android:id="@+id/$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Price"
        android:layout_marginLeft="25dp"
        android:checked="false"
        android:text="$" />



    <CheckBox
        android:id="@+id/$$$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/$$"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:checked="false"
        android:text="$$$" />

    <CheckBox
        android:id="@+id/$$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/$"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:checked="false"
        android:text="$$" />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance (in km)"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/$$$"
        />
    <EditText
        android:id="@+id/distance"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Distance"
        android:layout_marginTop="10dp"
        android:hint="Distance"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:layout_marginLeft="25dp"/>


</RelativeLayout>